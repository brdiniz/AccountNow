<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to t("activerecord.models.#{model}") + " " +  eval("@#{model}.name"), eval("@#{model}") %></li>
      <li class="last active"><%= link_to "Criar " + t("activerecord.models.#{model_item}"), "#" %></li>
    </ul>
  </div>
  <div class="content">
    <p />
    <div class="inner">
      <% form_for "#{model_item}".to_sym, eval("@#{model_item}"), :url => send("#{model}_#{model_item.pluralize}_path", eval("@#{model}")), :html => { :class => :form } do |f| -%>
        <%= f.error_messages %>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'layouts/sidebar', :locals => {:model => model, :menu_visible => false }) -%>

